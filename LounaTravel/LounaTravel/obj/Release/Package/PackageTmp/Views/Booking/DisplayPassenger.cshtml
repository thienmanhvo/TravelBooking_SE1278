@model IEnumerable<LounaTravel.EntityFramework.tbl_Passenger>
@{
    ViewBag.Title = "DisplayPassenger";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div id="bg-image" class="hero-wrap js-fullheight" style="background-image: url('/Assets/images/bg_1.jpg');margin-bottom:50px">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Tour Detail</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Chi tiết</h1>
            </div>
        </div>
    </div>
</div>
<div class="container ">
    <div class="col-xs-12 ">
        <div id="DanhSachKhach ftco-animate">
            <div class="text-center" style="margin: 40px 0 40px 0">
                <h1 class="title" style="text-transform: uppercase;">Danh sách khách hàng đi tour</h1>
            </div>
            <div class="book-danhsachkhachditour list ">
                @{var i = 1; }
                @foreach (var item in Model)
                {
                    <div class="row thongtin" style="font-size: 14px">
                        <div class="col-md-12 col-sm-12 col-xs-12 mg-bot10">
                            <div>
                                <div style="padding: 12px 15px 12px 15px; background: #c50000; color: #FFF">Khách hàng @i</div>
                            </div>

                            <div class="row" style="margin-bottom:10px;padding: 0 2% 0 2%">
                                <div class="col-sm-4">
                                    <h5 class="mg-bot5">Họ tên :</h5>
                                    <div class="form-control">
                                        @Html.DisplayFor(modelItem => item.Fullname, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-2 text-center">
                                    <h5 class="mg-bot5">Giới tính</h5>
                                    <div class="form-control">
                                        @if (item.Gender == false)
                                        {
                                            @Html.DisplayName("Nữ");
                                        }
                                        else
                                        {
                                            @Html.DisplayName("Nam");
                                        }
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <h5 class="mg-bot5">Ngày sinh(dd/mm/yyyy):</h5>
                                    <div class="form-control"><center>@item.Birthday.ToString("dd/MM/yyyy")</center></div>

                                </div>
                                <div class="col-sm-3 text-center ">
                                    <h5 class="mg-bot5">Loại khách</h5>
                                    <div class="form-control">
                                        @if (item.Type.Equals("0"))
                                        {
                                            @Html.DisplayName("Người lớn");
                                        }
                                        else if (item.Type.Equals("1"))
                                        {
                                            @Html.DisplayName("Trẻ em");
                                        }
                                        else
                                        {

                                            @Html.DisplayName("Trẻ nhỏ");
                                        }

                                    </div>
                                </div>

                            </div>

                            <div class="row" style="padding: 15px 0 0px 0; border-top: 1px solid #ccc; margin-top: 15px;">
                                <div class="col-lg-12 col-sm-12 text-right">
                                    Người đặt: <span style="color:#cd2c24;font-weight: bold;font-size: 16px;padding-top: 18px">@Html.DisplayFor(modelItem => item.tbl_Booking.Username)</span>

                                </div>
                            </div>

                        </div>
                    </div>
                    i++;
                }

            </div>
        </div>

    </div>

</div>