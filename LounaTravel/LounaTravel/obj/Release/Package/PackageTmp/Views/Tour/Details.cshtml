                                                    <td style="width:300px;">Ngày đi: @Model.tbl_Tour.tbl_Flight.DateGo.ToString("dd/MM/yyyy  HH:mm")</td>
                                                    <td>Đến: @Model.tbl_Tour.tbl_Flight.DateGoArrival.ToString("dd/MM/yyyy  HH:mm")</td>
                                                    <td style="width:300px;">Chuyến bay: @Model.tbl_Tour.tbl_Flight.CodeGo</td>
                                                </tr>
