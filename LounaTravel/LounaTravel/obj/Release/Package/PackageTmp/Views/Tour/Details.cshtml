
@model LounaTravel.Models.ViewModels.TourDetails

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
@{var user = (LounaTravel.EntityFramework.tbl_User)HttpContext.Current.Session["USER_LOGIN"]; }
<style>
    .error{
        width:100%;
    }
</style>
<script src="~/Assets/js/detail.js"></script>
<script src="~/Assets/js/commentController.js"></script>
<script>
    function ValidationSearchTour() {
        var fromPlace = document.getElementById("txtFromPlace");
        if (fromPlace.value != 0) {
            return true;
        }
        alert('Bạn cần chọn nơi khởi hành');
        return false;

    }
</script>
<div id="bg-image" class="hero-wrap js-fullheight" style="background-image: url('/Assets/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Tour Detail</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Tour Detail</h1>
            </div>
        </div>
    </div>
</div>
<div class="container container-detail" style="margin-top:100px">
    <div class="row" style="background-color: #efeff0;padding-top: 30px">
        <h3 style="padding-left: 12px">@Model.tbl_Tour.Name	</h3>
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-7 ftco-animate">
                    <div class="single-slider owl-carousel">
                        @foreach (var image in Model.tbl_Tour.tbl_Image)
                        {
                            <div class="item">
                                <div class="hotel-img" style="background-image: url(/Assets/images/@image.Path);height: 430px!important"></div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-md-5 ftco-animate">
                    <hr>
                    <div style="height: 400px;">
                        <div class="col-xs-12">
                            <center><h3>Tiết Kiệm</h3></center>
                            <div class="row" style="margin-bottom: 22px;margin-top: 30px">
                                <div class="col-md-4 col-sm-4 col-xs-5">Mã tour:</div>
                                <div class="col-md-8 col-sm-8 col-xs-7">@Model.tbl_Tour.ID</div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-sm-4 col-xs-5 mg-10">Khởi hành:</div>
                                <div class="col-md-3 col-sm-3 col-xs-7">@Model.tbl_Tour.TimeBegin.ToString("dd/MM/yyyy")</div>
                                <div class="col-md-5 col-sm-5 col-xs-12"><i class="fa fa-calendar"></i><a href="@Url.Action("Search","Home",new {txtFromPlace = Model.tbl_Tour.fromPlace , txtToPlace = 0, timeBegin = DateTime.Today,traveler = 1})">&nbsp;&nbsp;<span style="color: #fc6600">Ngày khác</span></a></div>
                            </div>
                            <div class="row" style="margin-top: 15px">
                                <div class="col-md-4 col-sm-4 col-xs-5 mg-bot15">Nơi khởi hành:</div>
                                <div class="col-md-3 col-sm-3 col-xs-7"> @Model.tbl_Tour.tbl_FromPlace.CityName</div>
                                <div class="col-md-5 col-sm-5 col-xs-12  mg-bot15">
                                    <span>Thời gian: @((Model.tbl_Tour.TimeEnd - Model.tbl_Tour.TimeBegin).Days+1) Ngày</span>
                                </div>
                            </div>
                            <hr>
                            <center>
                                <p class="rate">
                                    <span class="star">
                                        @{
                                            if (Model.tbl_Tour.rating != null)
                                            {

                                                double rating10 = Model.tbl_Tour.rating.GetValueOrDefault() / 2.0;
                                                double rating5 = Math.Floor(rating10);
                                                for (int j = 0; j < rating5; j++)
                                                {
                                                    <i class="icon-star"></i>
                                                }
                                                double decimalPart = rating10 - rating5;
                                                if (decimalPart > 0)
                                                {
                                                    <i class="icon-star-half"></i>
                                                    for (int j = 0; j < (5 - rating5 - 1); j++)
                                                    {
                                                        <i class="icon-star-o"></i>
                                                    }
                                                }
                                                else
                                                {
                                                    for (int j = 0; j < (5 - rating5); j++)
                                                    {
                                                        <i class="icon-star-o"></i>
                                                    }
                                                }
                                                <span>@Model.tbl_Tour.rating</span>
                                            }
                                        }
                                    </span>
                                </p>
                            </center>
                            <hr>
                            <div class="f-left row" style="margin-bottom: 10px;width:100%;border: 1px grey solid;margin-right:15px">

                                <div style="width: 40%">
                                    <div style="font-size: 18px;margin-bottom: 5px;color:#e82c0c;border-bottom: 1px solid #ccc;padding-bottom: 5px;margin-top: 3px;padding-left: 4%">
                                        <span itemprop="price">@string.Format("{0:#,0}", Model.tbl_Tour.PriceForAdult)</span><span>&nbsp;</span>đ
                                    </div>
                                    <div style="font-size: 12px;padding-left: 4%">
                                        <span>Số chỗ còn nhận:</span>
                                        <span style="color:#e82c0c;font-weight: bold;font-size: 15px">
                                            @Model.tbl_Tour.SeatsRemaining
                                        </span>
                                    </div>
                                </div>
                                @if (Model.tbl_Tour.SeatsRemaining == 0)
                                {
                                    <a style="width: 60%;">
                                        <div style="border: 0.5px gray solid;color:white;background-color: #bd2130;height: 75px;padding-top: 7%;text-align: center">
                                            Hết chỗ
                                        </div>
                                    </a>
                                }
                                else
                                {
                                    if (Session["USER_LOGIN"] == null)
                                    {

                                        <a style="width: 60%; cursor:pointer;" data-toggle="modal" data-target="#dangnhap">
                                            <div style="border: 0.5px gray solid;background-color: #bd2130;height: 75px;padding-top: 7%;text-align: center;color:white">
                                                Đặt ngay
                                            </div>
                                        </a>
                                    }
                                    else
                                    {
                                        <a style="width: 60%;color:white" href="@Url.Action("Index", "Booking", new { ID = Model.tbl_Tour.ID })">
                                            <div style="border: 0.5px gray solid;background-color: #bd2130;height: 75px;padding-top: 7%;text-align: center">
                                                Đặt ngay
                                            </div>
                                        </a>
                                    }
                                }
                            </div>
                            <!--<hr>-->
                        </div>

                    </div>
