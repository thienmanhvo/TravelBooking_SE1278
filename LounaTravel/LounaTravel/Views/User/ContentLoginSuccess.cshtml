@model LounaTravel.EntityFramework.tbl_User

<!-- Modal Chinh sua-->
<div class="modal fade" id="chinhsua">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Chỉnh Sửa Thông Tin</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            @using (Html.BeginForm("Edit", "User"))
            {
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row  mg-bot10">

                        <div class="col-sm-11">
                            <div class="col-12"> <i class="fas fa-user" style="padding-top: 20px"></i> Tên tài khoản:</div>
                            <div class="row">
                                <div class="col-1"></div>
                                <input style="pointer-events:none;background-color: rgba(52, 44, 23, 0.2)!important;" class="form-control col-11 id height-30 " name="usernameEdit" value="@Model.Username" />
                            </div>

                        </div>
                    </div>
                    <div class="row  mg-bot10">
                        <div class="col-sm-11">
                            <div class="col-12"><i class="fas fa-envelope " style="padding-top: 20px"></i> Email:</div>
                            <div class="row">
                                <div class="col-1"></div>
                                <input class="form-control col-11 height-30 " id="EmailEdit" name="EmailEdit" type="text" value="@Model.Email" placeholder="Email" />
                            </div>

                        </div>
                    </div>
                    <div class="row mg-bot10">
                        <div class="col-sm-11">
                            <div class="col-12"><i class="fa fa-info" style="padding-top: 20px"></i> Họ:</div>
                            <div class="row">
                                <div class="col-1"></div>
                                <input class="form-control col-11 height-30 " id="lastNameEdit" name="lastNameEdit" type="text" value="@Model.LastName" placeholder="Họ:" />
                            </div>
                        </div>
                    </div>
                    <div class="row mg-bot10">
                        <div class="col-sm-11">
                            <div class="col-12"> <i class="fa fa-info" style="padding-top: 20px"></i> Tên:</div>
                            <div class="row">
                                <div class="col-1"></div>
                                <input class="form-control col-11 height-30 " id="firstNameEdit" name="firstNameEdit" type="text" value="@Model.FirstName" placeholder="Tên:" />
                            </div>
                        </div>
                    </div>
                    <div class="row mg-bot10">
                        <div class="col-sm-11">
                            <div class="col-12"> <i class="fa fa-info" style="padding-top: 20px"></i> Số điện thoại:</div>
                            <div class="row">
                                <div class="col-1"></div>
                                <input class="form-control col-11 height-30 " id="telEdit" name="telEdit" type="text" value="@Model.PhoneNumber" placeholder="Số điện thoại:" />
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger"><i class="fas fa-sign-in-alt" id="btn-chinhsua" style="padding-right: 10px"></i>Lưu</button>
                </div>
            }
        </div>
    </div>
</div>
